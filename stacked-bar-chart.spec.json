{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "padding": 5,
  "height": 1600,
  "title": {  
    "fontSize": 30, 
    "text": "LLMs vs. Double Jeopardy", 
    "subtitle": "as of airdate",
    "subtitleFontSize": 9 },
  "data": [
    {
      "name": "pData",
      "transform":[
        { 
          "type":"formula", 
          "expr": "split(datum.model, ' ')", 
          "as": "model"
        },
        { 
          "type":"formula", 
          "expr": "' (' + datum.modelcorrect + '/' +  datum.modeltotal + ')'", 
          "as": "fmtmodeltotal"
        },
        { 
          "type":"formula", 
          "expr": " datum.percent + '%'", 
          "as": "fmtpercent"
        },
        { 
          "type":"formula", 
          "expr":"parseInt(datum.msize) > 0 ? 'size: ' + datum.msize + '' : ''", 
          "as": "fmtsize"
        },
        { 
          "type":"formula", 
          "expr":"'date: ' + datum.mdate + ''", 
          "as": "fmtdate"
        },
        { 
          "type":"formula", 
          "expr":"datum.elapsed!=='1.000' ? 'avg time (cpu): ' + datum.elapsed + ' seconds' : ''", 
          "as": "fmtelapsed"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "y",
      "type": "band",
      "range": "height",
      "domain": {"data": "pData", "field": "model"},
      "padding": 0.2
    },
    {
      "name": "x",
      "type": "linear",
      "range": "width",
      "domain": {"data": "pData", "field": "percent"},
      "nice": true,
      "round": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "orient": "bottom", 
      "scale": "x", 
      "title": "% of Correct Answers (Correct/Total)",
      "titleAlign":"right",
      "titleFontSize": 18
    },
    {
      "orient": "left", 
      "scale": "y",
      "title": "GGMLv3 Model", 
      "labelFontSize": 12,
      "labelFontWeight": "bold", 
      "titleFontSize": 18
    }
  ],
  "marks": [
    {
      "name": "bars",
      "from": {"data": "pData"},
      "type": "rect",     
      "encode": {
        "enter": {
            "y": {"scale": "y", "field": "model"},
            "height": {"scale": "y", "band": 1},
            "x": {"scale": "x", "field": "percent"},
            "x2": {"scale": "x", "value": 0},
            "fill": {"data": "pData", "field": "c"},
            "text": { "field": "model" },
            "fontSize": {"value": 22 },
            "stroke": {"value": "#444"}
        }
      }
    },
    {  
      "type": "text",
      "from": {"data": "pData"},
      "encode": { 
        "enter": { 
          "y": {"scale": "y", "field": "model", "band": 0.5},
          "dy": {"signal": "(datum.y2 - datum.y)/2"},
          "dx": {"signal": "((datum.x2 - datum.x)/2)"},
          "x": {
            "scale": "x", 
            "value": 0,
            "offset": 10
          },
          "fill": [
            {"data": "pData", "field": "tc"}
          ],
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 22 },
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "text": { "field": "fmtpercent" }
        }     
      }
    },
    {  
      "type": "text",
      "from": {"data": "pData"},
      "encode": { 
        "enter": { 
          "y": {"scale": "y", "field": "model", "band": 0.5},
          "dy": {"signal": "(datum.y2 - datum.y)/2"},
          "x": {
            "scale": "x", 
            "value": 0,
            "offset": 105
          },
          "fill": [
            {"data": "pData", "field": "tc"}
          ],
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 16 },
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "text": { "field": "fmtmodeltotal" }
        }     
      }
    },
    {  
      "type": "text",
      "from": {"data": "pData"},
      "encode": { 
        "enter": { 
          "y": {"scale": "y", "field":"model", "offset": 40, "value": 0 },
          "dy": {"signal": "(datum.y2 - datum.y)/2"},
          "x": {"scale": "x", "value": 0, "offset": 5 },
          "fill": [
            {"data": "pData", "field": "tc"}
          ],
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 9 },
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": { "field": "fmtsize" }
        }     
      }
    }, 
    {  
      "type": "text",
      "from": {"data": "pData"},
      "encode": { 
        "enter": { 
          "y": {"scale": "y", "field": "model", "band": 1.01},
          "dy": {"signal": "(datum.y2 - datum.y)/2"},
          "x": {"scale": "x", "value": 0, "offset": 5 },
          "fill": [
            {"data": "pData", "field": "tc"}
          ],
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 9 },
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": { "field": "fmtdate" }
        }     
      }
    }, 
    {  
      "type": "text",
      "from": {"data": "pData"},
      "encode": { 
        "enter": { 
          "y": { "scale": "y", "field": "model", "offset": 13},
          "dy": {"signal": "(datum.y2 - datum.y)/2"},
          "x": {"scale": "x", "value": 0, "offset": 5 },
          "fill": [
            {"data": "pData", "field": "tc"}
          ],
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 10 },
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": { "field": "fmtelapsed" }
        }     
      }
    },
    {  
      "type": "text",
      "from": {"data": "pData"},
      "encode": { 
        "enter": { 
          "y": { "value": 0 },
          "x": {"value": 125 },
          "fontSize": {"value": 14 },
          "align": {"value": "center"},
          "text": { "field": "maxairdate" }
        }     
      }
    }
  ]
}